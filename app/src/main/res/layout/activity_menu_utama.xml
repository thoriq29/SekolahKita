<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/bg_blue"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.example.thoriq.sekolahkita.MenuUtama">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        app:navigationIcon="?attr/homeAsUpIndicator"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:elevation="3dp"
        android:background="#31709C"
        android:minHeight="?attr/actionBarSize"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

    </android.support.v7.widget.Toolbar>
    
    <TextView
        android:id="@+id/tv1"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:textSize="25dp"
        android:typeface="sans"
        android:textAlignment="center"
        android:text="Temukan Informasi Sekolah
di seluruh Indonesia"
        android:textColor="@color/white"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_marginTop="15dp"
            android:id="@+id/card"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/tv2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sekolah mana yang ingin Anda ketahui?"
                    android:textAlignment="center"
                    android:textSize="17dp"
                    android:textColor="#31709C"
                    android:paddingTop="10dp"/>
                <TextView
                    android:id="@+id/tv3"
                    android:text="Provinsi"
                    android:gravity="center"
                    android:textColor="#31709C"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:layout_marginTop="18dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv2"/>
                <Spinner
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv3"
                    android:id="@+id/spinnerProv"
                    android:spinnerMode="dialog"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:textColor="#CFD8DC"
                    android:layout_width="fill_parent">
                </Spinner>
                <View
                    android:id="@+id/v1"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="5dp"
                    android:background="#CFD8DC"
                    android:layout_below="@+id/spinnerProv"/>
                <TextView
                    android:id="@+id/tv4"
                    android:text="Kabupaten/Kota"
                    android:gravity="center"
                    android:textColor="#31709C"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:layout_marginTop="18dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/v1"/>
                <Spinner
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv4"
                    android:id="@+id/spinnerKota"
                    android:spinnerMode="dialog"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:textColor="#CFD8DC"
                    android:layout_width="fill_parent">
                </Spinner>
                <View
                    android:id="@+id/v2"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="5dp"
                    android:background="#CFD8DC"
                    android:layout_below="@+id/spinnerKota"/>
                <TextView
                    android:id="@+id/tv5"
                    android:text="Jenjang"
                    android:paddingLeft="10dp"
                    android:textColor="#31709C"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:layout_marginTop="18dp"
                    android:layout_width="160dp"
                    android:layout_marginLeft="10dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/spinnerKota"/>
                <TextView
                    android:id="@+id/tv6"
                    android:text="Status"
                    android:gravity="start"
                    android:textColor="#31709C"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:layout_marginTop="18dp"
                    android:layout_width="150dp"
                    android:paddingLeft="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/tv5"
                    android:layout_alignParentRight="true"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/spinnerKota"/>
                <Spinner
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv5"
                    android:id="@+id/spinnerJenjang"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_alignParentLeft="true"
                    android:textColor="#CFD8DC"
                    android:layout_width="150dp">
                </Spinner>
                <View
                    android:id="@+id/v3"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="5dp"
                    android:background="#CFD8DC"
                    android:layout_below="@+id/spinnerJenjang"/>
                <Spinner
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv6"
                    android:id="@+id/spinnerStatus"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@+id/spinnerJenjang"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_alignParentRight="true"
                    android:textColor="#CFD8DC"
                    android:layout_width="150dp">
                </Spinner>
                <Button
                    android:id="@+id/btnCariSekolah"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/spinnerJenjang"
                    android:layout_marginLeft="20dp"
                    android:background="#31709C"
                    android:text="Cari Sekolah"
                    android:textColor="#fff"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="30dp"/>
                <Button
                    android:id="@+id/btnCobaLagi"
                    android:layout_below="@id/spinnerJenjang"
                    android:layout_marginRight="100dp"
                    android:layout_marginLeft="100dp"
                    android:layout_marginTop="30dp"
                    android:text="COBA LAGI"
                    android:visibility="invisible"
                    android:background="@color/bg_blue"
                    android:textColor="#fff"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </RelativeLayout>
        </android.support.v7.widget.CardView>
            <com.google.android.gms.ads.AdView
                xmlns:ads="http://schemas.android.com/apk/res-auto"
                android:id="@+id/adView"
                android:layout_below="@+id/card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:layout_alignParentBottom="true"
                ads:adSize="SMART_BANNER"
                ads:adUnitId="ca-app-pub-4615847918321667/9420582656">

            </com.google.android.gms.ads.AdView>

        </RelativeLayout>
    </ScrollView>

</LinearLayout>
