<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="55dp"
    tools:context="com.example.thoriq.sekolahkita.ProfilSekolah.HomeFragment">
    <RelativeLayout
        android:id="@+id/R2"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp">
        <ImageView
            android:id="@+id/logo"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:paddingTop="20dp"
            android:layout_width="110dp"
            android:layout_height="110dp" />
        <TextView
            android:id="@+id/namaSekolahProfil"
            android:layout_marginTop="20dp"
            android:textColor="#000"
            android:textSize="18dp"
            android:layout_toRightOf="@id/logo"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/alamat"
            android:layout_below="@+id/namaSekolahProfil"
            android:layout_toRightOf="@+id/logo"
            android:layout_width="match_parent"
            android:paddingRight="20dp"
            android:textColor="#000"

            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/web"
            android:layout_below="@+id/alamat"
            android:layout_toRightOf="@+id/logo"
            android:layout_width="match_parent"
            android:paddingRight="20dp"
            android:layout_marginTop="3dp"

            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/Akreditasi"
            android:layout_below="@+id/web"
            android:layout_toRightOf="@+id/logo"
            android:layout_width="match_parent"
            android:paddingRight="20dp"
            android:layout_marginTop="3dp"

            android:layout_height="wrap_content" />
    </RelativeLayout>
<LinearLayout
    android:layout_below="@+id/R2"
    android:layout_width="match_parent"
    android:background="@color/bg_blue"
    android:layout_height="wrap_content">
    <ScrollView
        android:overScrollMode="never"
        android:layout_width="match_parent"
        android:scrollbarThumbVertical="@drawable/scroll"
        android:scrollbarSize="2dp"
        android:layout_height="wrap_content"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="405dp">
                    <LinearLayout
                        android:background="@drawable/gradient_background"
                        android:layout_width="match_parent"
                        android:layout_height="350dp"
                        android:orientation="vertical">
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/fotokepSek"
                            android:layout_width="150dp"
                            app:civ_circle_background_color="#fff"
                            app:civ_border_width="2dp"
                            android:layout_gravity="center_horizontal"
                            app:civ_border_color="#fff"
                            android:scaleType="centerCrop"
                            android:layout_marginTop="45dp"
                            android:layout_height="150dp" >
                        </de.hdodenhof.circleimageview.CircleImageView>
                        <TextView
                            android:id="@+id/namaKepsek"
                            android:layout_marginTop="10dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Kepala Sekolah"
                            android:textColor="#fff"
                            android:textStyle="bold"
                            android:textSize="21sp"/>
                        <TextView
                            android:id="@+id/NIP"
                            android:layout_marginTop="0dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="NIP : 09392340934"
                            android:textColor="#fff"
                            android:textStyle="bold"
                            android:textSize="21sp"/>
                    </LinearLayout>
                    <android.support.v7.widget.CardView
                        android:layout_width="400dp"
                        android:layout_height="200dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="300dp">
                        <LinearLayout

                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:weightSum="3">
                            <LinearLayout
                                android:gravity="center"
                                android:orientation="vertical"
                                android:layout_width="0dp"
                                android:paddingTop="10dp"
                                android:layout_weight="1"
                                android:layout_height="match_parent">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Guru"
                                    android:textSize="20sp"
                                    />
                                <TextView
                                    android:id="@+id/jmlhGuru"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:textStyle="bold"
                                    android:textSize="20sp"
                                    android:paddingTop="10dp"
                                    android:textColor="@color/bg_blue"/>

                            </LinearLayout>
                            <LinearLayout
                                android:gravity="center"
                                android:orientation="vertical"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:paddingTop="10dp"
                                android:layout_height="match_parent">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Siswa"
                                    android:textSize="20sp"
                                    />

                                <TextView
                                    android:id="@+id/jmlhSiswa"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingTop="10dp"
                                    android:text="0"
                                    android:textColor="@color/bg_blue"
                                    android:textSize="20sp"
                                    android:textStyle="bold" />

                            </LinearLayout>
                            <LinearLayout
                                android:gravity="center"
                                android:orientation="vertical"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:paddingTop="10dp"
                                android:layout_height="match_parent">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Jurusan"
                                    android:textSize="20sp"
                                    />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:id="@+id/jmlhJurusan"
                                    android:textStyle="bold"
                                    android:textSize="20sp"
                                    android:paddingTop="10dp"
                                    android:textColor="@color/bg_blue"/>

                            </LinearLayout>
                        </LinearLayout>

                    </android.support.v7.widget.CardView>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="360dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:layout_marginTop="45dp">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:paddingLeft="25dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:src="@drawable/ic_home_black_24px"/>
                        <TextView
                            android:id="@+id/emailSek"
                            android:textStyle="bold"
                            android:layout_gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="20dp"
                            android:text="email"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="25dp"
                        android:orientation="horizontal"
                        android:paddingLeft="25dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:src="@drawable/ic_home_black_24px"/>
                        <TextView
                            android:textStyle="bold"
                            android:id="@+id/telpon"
                            android:layout_gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="20dp"
                            android:text="+266 225 225"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="25dp"
                        android:orientation="horizontal"
                        android:paddingBottom="40dp"
                        android:paddingLeft="25dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:src="@drawable/ic_home_black_24px"/>
                        <TextView
                            android:textStyle="bold"
                            android:id="@+id/fax"
                            android:layout_gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="20dp"
                            android:text="Add to group"/>
                    </LinearLayout>
                    <LinearLayout
                        android:visibility="invisible"
                        android:orientation="horizontal"
                        android:paddingBottom="40dp"
                        android:paddingLeft="25dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:src="@drawable/ic_home_black_24px"/>
                        <TextView
                            android:textStyle="bold"
                            android:id="@+id/tv"
                            android:layout_gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="20dp"
                            android:text="Add to group"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

        </RelativeLayout>
    </ScrollView>
</LinearLayout>


</RelativeLayout>